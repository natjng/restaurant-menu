

<% if @restaurant.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4>
      <%= pluralize(@restaurant.errors.count, "error") %>:
    </h4>
 
    <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @restaurant do |f| %>
    <%= f.label :name, "Name*" %><br />
    <%= f.text_field :name %><br /><br />

    <%= f.label :cuisine %><br />
    <%= f.text_field :cuisine %><br /><br />

    <%= f.label :address %><br />
    <%= f.text_area :address %><br /><br />

    <%= f.label :phone_number %><br />
    <%= f.number_field :phone_number %><br /><br />

    <%= f.label :hours %><br />
    <%= f.text_area :hours %><br /><br />

    <%= f.submit %>
<% end %>

<%= button_to "Cancel", restaurants_path, method: "get" %>