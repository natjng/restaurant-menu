<h1><%= @menu.restaurant.name %></h1>
<h2>Menu: <%= @menu.name %></h2>

<p>
<%= @menu.description %>
</p>

<% @menu.categories.uniq.each do |category| %>
        <h3><%= link_to category.name, category %></h3>
        <% category.items.each do |item| %>
            <%= link_to item.name, item %>
            <%= number_to_currency(item.price) %><br />
        <% end %><br />
<% end %>

<br />
<br />

<%= link_to "Edit Menu", edit_menu_path(@menu) %> | <%= link_to "Add Item to Menu", new_menu_item_path(@menu) %>

<br />
<br />

<div>
<%= link_to "Back to #{@menu.restaurant.name}", @menu.restaurant %> | <%= link_to "All Menus", menus_path %>
</div>